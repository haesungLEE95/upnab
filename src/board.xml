<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardns">
	<resultMap type="board" 		id="boardResult">
		<result property="member_id" 		column="member_id" />
		<result property="board_num" column="board_num" />
		<result property="board_date" 	column="board_date" />
		<result property="board_content" 	column="board_content" />
		<result property="board_hit" 		column="board_hit" />
		<result property="board_pickcnt" 		column="board_pickcnt" />
		<result property="board_share" 		column="board_share" />
		<result property="board_type" 		column="board_type" />
		
	</resultMap>
	<select id="select" parameterType="hashMap" resultMap="boardResult">
		select * from (select a.*, rowNum rn from ( 
			select * from upnab_board order by board_num desc )a) 
			where rn between #{startRow} and #{endRow}
	</select>
	<select id="total" resultType="Integer">
		select count(*) from upnab_board
	</select>
	<insert id="insert" parameterType="member">
		insert into upnab_member values (upnab_member_seq.nextval,#{member_id}, #{member_password}, #{member_name},
			#{member_email}, #{member_tel}, 0)
	</insert>
	<update id="update" parameterType="member">
		update upnab_member set member_password=#{member_password}, member_name=#{member_name},
		 	member_tel=#{member_tel}, member_email=#{member_email}	 	
		 	where member_id=#{member_id}
	</update>
	<update id="delete" parameterType="string">
		update upnab_member set member_inout='y' where member_id=#{member_id}	
	</update>	
</mapper>